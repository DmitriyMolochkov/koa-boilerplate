{
  "name": "koa-boilerplate",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.12.0"
  },
  "main": "build/index.js",
  "imports": {
    "#class-validator": "./src/class-validator",
    "#config": "./src/config",
    "#constants": "./src/constants",
    "#database": "./src/database",
    "#logger": "./src/logger",
    "#mixins": "./src/mixins",
    "#modules/*": "./src/modules/*",
    "#redis": "./src/redis",
    "#utils": "./src/utils"
  },
  "scripts": {
    "nodemon": "nodemon",
    "prepare": "husky install",
    "start": "ts-node src/index.ts",
    "deploy": "ts-node --swc src/index.ts",
    "build-js": "tsc --build --force tsconfig.json && tsc-alias --project tsconfig.json",
    "clean-build": "rimraf ./build && tsc --build tsconfig.json --clean",
    "start-js": "node --experimental-specifier-resolution=node ./build/index.js",
    "test-spec": "jest --config jest.spec.config.ts",
    "migration:generate": "cross-env-shell \"typeorm-ts-node-esm -d ./src/database/data-source.ts migration:generate ./src/database/migrations/$npm_config_name\"",
    "migration:run": "typeorm-ts-node-esm -d ./src/database/data-source.ts migration:run",
    "migration:run-js": "node --experimental-specifier-resolution=node ./node_modules/typeorm/cli -d ./build/database/data-source.js migration:run",
    "migration:revert": "typeorm-ts-node-esm -d ./src/database/data-source.ts migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.(js|cjs|msx|jsx|ts|tsx|html|vue)": [
      "eslint --fix --max-warnings=0"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "./"
    ],
    "ext": "js, .cjs, mjs, jsx, ts, tsx, json, html, vue",
    "ignore": [
      "build",
      ".husky"
    ],
    "exec": "npm run start",
    "events": {
      "start": "cls || clear"
    }
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@swc/core": "^1.3.70",
    "@swc/helpers": "^0.5.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "config": "^3.3.9",
    "dotenv": "^16.3.1",
    "http-status-codes": "^2.1.0",
    "install": "^0.13.0",
    "ioredis": "^5.3.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "lodash-es": "^4.17.21",
    "pg": "^8.11.1",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3",
    "pino-http-print": "^3.1.0",
    "pino-pretty": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/eslint": "^8.37.0",
    "@types/jest": "^29.5.1",
    "@types/koa": "^2.13.6",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/lint-staged": "^13.2.0",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^18.15.13",
    "@types/redis-info": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-import-newlines": "^1.3.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.0.4"
  }
}
